  <!-- Imagen de fondo -->
 <%= image_tag "fondo_grande.jpg", alt: "Background", class: "object-fit-cover", style: "width: 80%; height: 100%;" %>

  <!-- Título centrado -->
  <h1 class="position-absolute top-50 start-50 translate-middle text-white bg-dark p-3 rounded">
    Hi!, I'm Mirian 
  </h1>

  <!-- Botones en la parte inferior -->
  <div class="position-absolute w-100" style="bottom: 20px;">
    
    <a href="#AboutMe" class="btn btn-dark mx-3" style="width: 150px;">About Me</a>
    <a href="#proyects" class="btn btn-dark mx-3" style="width: 150px;">Projects</a>

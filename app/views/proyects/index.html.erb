<h1 id="proyects" class="text-center mt-5">Proyects</h1>


<div class="container mt-5">
  <div class="row">
    <% @proyects.each_with_index do |proyect, index| %>
      <div class="col-12 mb-4 d-flex flex-wrap align-items-center">
        <% if index.even? %>
          <!-- Card a la izquierda, imagen a la derecha -->
          <div class="col-md-6">
            <div class="card h-100">
              <div class="card-body">
                <h5 class="card-title"><%= proyect.title %></h5>
                <p class="card-text"><%= truncate(proyect.description, length: 100) %></p>
                <%= link_to "Show this project", proyect, class: "btn btn-primary" %>
              </div>
            </div>
          </div>
          <div class="col-md-6 d-flex justify-content-center align-items-center">
            <%= image_tag "fondo_grande.jpg", alt: proyect.title, class: "img-fluid rounded", style:"width: 300px; height: 200px; object-fit: cover;" %>
          </div>
        <% else %>
          <!-- Imagen a la izquierda, card a la derecha -->
          <div class="col-md-6 d-flex justify-content-center align-items-center">
            <%= image_tag "fondo_grande.jpg", alt: proyect.title, class: "img-fluid rounded", style:"width: 300px; height: 200px; object-fit: cover;" %>
          </div>
          <div class="col-md-6">
            <div class="card h-100">
              <div class="card-body">
                <h5 class="card-title"><%= proyect.title %></h5>
                <p class="card-text"><%= truncate(proyect.description, length: 100) %></p>
                <%= link_to "Show this project", proyect, class: "btn btn-primary" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>


